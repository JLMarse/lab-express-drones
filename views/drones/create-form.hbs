<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-8">

            <h2>Create a new drone</h2>
            <hr>

            <form action="/drones/create" method="POST">
                <div class="mb-3 mt-5">
                    <label for="droneName" class="form-label">Name</label>
                    <input type="text" class="form-control" id="droneName" name="name">
                </div>

                <div class="mb-3">
                    <label for="numPropellers" class="form-label">Propellers</label>
                    <input type="text" class="form-control" id="numPropellers" name="propellers">
                </div>

                <div class="mb-3 ">
                    <label for="maxSpeed" class="form-label">Max Speed</label>
                    <input type="text" class="form-control" id="maxSpeed" name="speed">
                </div>

                <button type="submit" class="btn btn-dark">Create Drone</button>
            </form>

        </div>
    </div>



</div>